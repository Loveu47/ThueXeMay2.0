@model ThueXeMay.Models.bill

@if (Model.status == "Hoàn thành")
{
    var item = (TimeSpan)(Model.date_end - Model.date_start);
    int day = item.Days;
    int month = day / 30;
    int hour = item.Hours;
    int tong = hour * Model.money_hour + (day - month * 30) * ViewBag.priceday * Model.money_hour
        + month * ViewBag.priceday * ViewBag.pricemonth * Model.money_hour;

    <div class="col-xxl-6 col-xl-8">
        <br /><br />
        <h3 class="text-primary">Hoá đơn đơn thuê</h3>
        <div class="row ">
            <div class="col text-black-75"><i>Mã hoá đơn:</i></div>
            <div class="col text-red" style="font-size:20px">@Model.id_bill</div>
        </div>
        <div class="row ">
            <div class="col text-black-75"><i>Mã đơn:</i></div>
            <div class="col text-red" style="font-size:20px">@Model.id_rent</div>
        </div>
        <div class="row ">
            <div class="col text-black-75"><i>Giờ bắt đầu:</i></div>
            <div class="col text-red" style="font-size:15px">@Model.date_start</div>
        </div>
        <div class="row ">
            <div class="col text-black-75"><i>Giờ kết thúc:</i></div>
            <div class="col text-red" style="font-size:15px">@Model.date_end</div>
        </div>
        <div class="row ">
            <div class="col text-black-75"><i>Số giờ sử dụng:</i></div>
            <div class="col text-red" style="font-size:20px">@month Tháng, @(day - month * 30) Ngày, @hour Giờ </div>
        </div>
        <div class="row ">
            <div class="col text-black-75"><i>Giá / giờ:</i></div>
            <div class="col text-red" style="font-size:20px">@Model.money_hour.ToString("#,##0").Replace(',', '.')<small>VNĐ</small></div>
        </div>
        <div class="row ">
            <div class="col text-black-75"><i>Tổng tiền:</i></div>
            <div class="col text-red" style="font-size:20px">@tong.ToString("#,##0").Replace(',', '.')<small>VNĐ</small></div>
        </div>
        <hr class="my-4"><br /><br />
        @*Tạo qr code*@
        <img style="width:inherit" src='https://img.vietqr.io/image/970422-1325040700-print.png?amount=@{@tong}&addInfo=Thanh toan ma hoa don "+@Model.id_bill +"&accountName=Tran Duc Tai'>
</div>
}
else
{
    <h3>Đơn thuê chưa hoàn thành</h3>
}

